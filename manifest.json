{
  "manifest_version": 3,
  "name": "Fokus URL Blocker",
  "version": "1.0",
  "description": "Blockiert den Zugriff auf YouTube und zugehörige URLs, um die Konzentration zu fördern.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.ggpht.com/*",
    "*://*.googleusercontent.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
